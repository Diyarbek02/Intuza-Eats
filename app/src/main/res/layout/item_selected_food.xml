<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_food"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Salad"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/image_food"
        app:layout_constraintStart_toEndOf="@id/image_food"
        app:layout_constraintTop_toTopOf="@id/image_food"
        app:layout_constraintVertical_bias="0.32" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#953412"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/tv_food_name"
        app:layout_constraintStart_toStartOf="@id/tv_food_name"
        app:layout_constraintTop_toBottomOf="@id/tv_food_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/countoffood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/image_food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_food" />

    <ImageView
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:src="@drawable/baseline_remove_24"
        app:layout_constraintBottom_toBottomOf="@id/countoffood"
        app:layout_constraintEnd_toStartOf="@id/countoffood"
        app:layout_constraintTop_toTopOf="@id/countoffood" />

    <ImageView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="@id/countoffood"
        app:layout_constraintStart_toEndOf="@id/countoffood"
        app:layout_constraintTop_toTopOf="@id/countoffood" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10.00"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/image_food"
        app:layout_constraintEnd_toStartOf="@id/delete"
        app:layout_constraintStart_toEndOf="@id/add"
        app:layout_constraintTop_toTopOf="@id/image_food" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/baseline_delete_outline_24"
        app:layout_constraintBottom_toBottomOf="@id/image_food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_food" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A5A8AA"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/image_food"
        android:layout_marginTop="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>